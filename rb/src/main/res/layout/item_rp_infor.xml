<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="名字"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="名字"
            android:layout_below="@+id/tv_name_introduce"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_money"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_money_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="金额"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="名字"
            android:layout_below="@+id/tv_money_introduce"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="时间"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="名字"
            android:layout_below="@+id/tv_time_introduce"/>
    </RelativeLayout>
</LinearLayout>
